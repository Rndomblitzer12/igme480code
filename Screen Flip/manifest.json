{
  "manifest_version": 3,
  "name": "Screen Flip Extension",
  "version": "1.0",
  "description": "Flip the screen upside down with a button click.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
